#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cout << "Enter your value of n: ";
    cin >> n;
    int i, j;
    for (i = 0; i < n; i++)
    {
        // FOR SPACE
        for (j = 0; j < n - i - 1; j++)
        {
            cout << " ";
        }
        // FOR STARS
        for (j = 0; j < 2 * i + 1; j++)
        {
            cout << "*";
        }

        for (j = 0; j < n - i - 1; j++)
        {
            cout << " ";
        }
        cout << endl;
    }

    for (i = 0; i < n; i++)
    {
        // FOR SPACE
        for (j = 0; j < i; j++)
        {
            cout << " ";
        }
        // FOR STARS
        for (j = 0; j < 2 * n - (2 * i + 1); j++)
        {
            cout << "*";
        }

        for (j = 0; j < i; j++)
        {
            cout << " ";
        }
        cout << endl;
    }
}
